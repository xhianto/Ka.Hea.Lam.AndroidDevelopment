<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@color/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.75"
        >
        <ImageView
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor"
            android:contentDescription="@string/game_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/frame" />

        <ImageButton
            android:id="@+id/imageButton00"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@color/backgroundColor"
            android:contentDescription="@string/pos00"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/horizontal1"
            app:layout_constraintEnd_toStartOf="@+id/vertical1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/horizontal1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frame" />

        <ImageButton
            android:id="@+id/imageButton01"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@color/backgroundColor"
            android:contentDescription="@string/pos01"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/horizontal1"
            app:layout_constraintEnd_toStartOf="@+id/vertical2"
            app:layout_constraintLeft_toLeftOf="@+id/vertical1"
            app:layout_constraintStart_toStartOf="@+id/vertical1"
            app:layout_constraintTop_toTopOf="@+id/frame" />

        <ImageButton
            android:id="@+id/imageButton02"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@color/backgroundColor"
            android:contentDescription="@string/pos02"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/horizontal1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton01"
            app:layout_constraintStart_toStartOf="@+id/vertical2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@color/backgroundColor"
            android:contentDescription="@string/pos10"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/horizontal2"
            app:layout_constraintEnd_toStartOf="@+id/vertical1"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton00"
            app:layout_constraintStart_toStartOf="@+id/frame"
            app:layout_constraintTop_toTopOf="@+id/horizontal1" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@color/backgroundColor"
            android:contentDescription="@string/pos11"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/horizontal2"
            app:layout_constraintEnd_toStartOf="@+id/vertical2"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton10"
            app:layout_constraintStart_toStartOf="@+id/vertical1"
            app:layout_constraintTop_toTopOf="@+id/horizontal1" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@color/backgroundColor"
            android:contentDescription="@string/pos12"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/horizontal2"
            app:layout_constraintEnd_toEndOf="@+id/frame"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton11"
            app:layout_constraintStart_toStartOf="@+id/vertical2"
            app:layout_constraintTop_toTopOf="@+id/horizontal1" />

        <ImageButton
            android:id="@+id/imageButton20"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@color/backgroundColor"
            android:contentDescription="@string/pos20"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vertical1"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton10"
            app:layout_constraintStart_toStartOf="@+id/frame"
            app:layout_constraintTop_toTopOf="@+id/horizontal2" />

        <ImageButton
            android:id="@+id/imageButton21"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@color/backgroundColor"
            android:contentDescription="@string/pos21"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vertical2"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton20"
            app:layout_constraintStart_toStartOf="@+id/vertical1"
            app:layout_constraintTop_toTopOf="@+id/horizontal2" />

        <ImageButton
            android:id="@+id/imageButton22"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@color/backgroundColor"
            android:contentDescription="@string/pos22"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/imageButton21"
            app:layout_constraintStart_toStartOf="@+id/vertical2"
            app:layout_constraintTop_toTopOf="@+id/horizontal2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.32" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.67" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.32" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.67" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/resetButton"
        android:text="@string/reset"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/player1Name"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24sp"
        android:textColor="#05988a" android:background="#BBBBBB" />
    <TextView
        android:id="@+id/player1Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/player1Name"
        app:layout_constraintLeft_toLeftOf="@+id/player1Name"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/player2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp"
        android:textColor="#ffc109"/>
    <TextView
        android:id="@+id/player2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/player2Name"
        app:layout_constraintRight_toRightOf="@+id/player2Name"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/draw"
        android:text="@string/draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/drawScore"
        app:layout_constraintLeft_toLeftOf="@+id/drawScore"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/drawScore"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>